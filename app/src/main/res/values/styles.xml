<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSelectHandle">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleLeft">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleRight">@drawable/select_handle_white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="colorControlActivated">@color/tr75_white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="AppThemeAnim" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="android:textSelectHandle">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleLeft">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleRight">@drawable/select_handle_white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="colorControlActivated">@color/tr75_white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="AppThemeAct" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSelectHandle">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleLeft">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleRight">@drawable/select_handle_white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="colorControlActivated">@color/tr75_white</item>
        <item name="android:windowBackground">@drawable/bg_bikegarageact</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSelectHandle">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleLeft">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleRight">@drawable/select_handle_white</item>
        <item name="android:titleTextAppearance">@style/DialogTitleTextStyle</item>
        <item name="colorControlActivated">@color/tr75_white</item>
        <item name="android:itemTextAppearance">@style/DialogItemTextStyle</item>
    </style>

    <style name="DialogTitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSelectHandle">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleLeft">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleRight">@drawable/select_handle_white</item>
        <item name="colorControlActivated">@color/tr75_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogItemTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="android:textSelectHandle">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleLeft">@drawable/select_handle_white</item>
        <item name="android:textSelectHandleRight">@drawable/select_handle_white</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="colorControlActivated">@color/tr75_white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="TableHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill_vertical</item>
    </style>

    <style name="TableSubheader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TableDataLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/bike_grey_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="TableData">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/accent_green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>
</resources>