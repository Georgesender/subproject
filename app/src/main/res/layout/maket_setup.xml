                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLength="45"
                    android:paddingStart="10dp"
                    android:textColor="@color/green_strings"
                    android:textColorHint="@color/transparent_white"
                    android:textSize="16sp"
                    app:layout_columnSpan="4"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    tools:ignore="DuplicateSpeakableTextCheck,LabelFor,RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck" />


                <TextView
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:gravity="center"
                    android:background="@drawable/tb_end_start"
                    android:text="Rebound"
                    android:textColor="@color/white"
                    android:paddingBottom="2dp"
                    app:layout_columnSpan="2"
                    app:layout_gravity="fill"
                    app:layout_columnWeight="2"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tb_end_start"
                    android:gravity="center"
                    android:text="Compression"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="2"
                    app:layout_gravity="fill"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:text="HSR"
                    android:background="@drawable/tb_start_bott_end"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:text="LSR"
                    android:background="@drawable/tb_start_bott_end"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:text="HSC"
                    android:background="@drawable/tb_start_bott_end"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:text="LSC"
                    android:background="@drawable/tb_start_bott_end"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    app:layout_columnWeight="1"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/fork_hsr"
                    android:layout_width="88dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:hint="@string/_1"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/white"
                    android:textColorHint="@color/transparent_white"
                    android:textSize="19sp"
                    app:layout_columnWeight="1"
