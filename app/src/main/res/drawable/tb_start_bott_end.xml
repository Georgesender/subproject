<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/transparent" /> <!-- Тло -->
        </shape>
    </item>
    <item android:left="8dp" android:right="8dp" android:bottom="2dp">
        <shape>
            <stroke android:color="@color/bike_grey_blue" android:width="2dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

    <!-- Нижня межа -->
    <item android:left="8dp" android:right="8dp" android:top="0dp">
        <shape>
            <stroke android:color="@android:color/black" android:width="2dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
</layer-list>
