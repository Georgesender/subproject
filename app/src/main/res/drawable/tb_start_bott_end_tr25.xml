<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/transparent" /> <!-- Тло -->
        </shape>
    </item>
    <item android:left="1dp" android:right="1dp" android:bottom="4dp">
        <shape>
            <stroke android:color="@color/tr30_white" android:width="1dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

    <!-- Нижня межа -->
    <item android:left="1dp" android:right="1dp" android:top="0dp">
        <shape>
            <stroke android:color="@color/black" android:width="2dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
</layer-list>
