<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- Розмір кола (якщо потрібно фіксований) -->
    <size
        android:width="60dp"
        android:height="60dp" />

    <!-- Заливка всередині кола -->
    <solid android:color="@color/bg_hint" />

    <!-- Обвідка -->
    <stroke
        android:width="0.5dp"
        android:color="@color/black" />

    <!-- Внутрішні відступи, якщо потрібні -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
