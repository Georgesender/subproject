<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/transparent" /> <!-- Тло -->
        </shape>
    </item>
    <item android:right="3dp" android:bottom="2dp" android:left="3dp">
        <shape>
            <stroke android:color="@color/white" android:width="1dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

    <!-- Нижня межа -->
    <item android:right="3dp" android:top="0dp" android:left="3dp">
        <shape>
            <stroke android:color="@android:color/black" android:width="2dp"/>
            <solid android:color="@color/transparent_white"/>
        </shape>
    </item>
</layer-list>
