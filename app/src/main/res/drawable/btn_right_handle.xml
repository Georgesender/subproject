<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Основна форма -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/tr30_white"/>
            <stroke android:width="1px" android:color="@color/transparent_black"/>
            <corners android:topLeftRadius="10px" android:bottomLeftRadius="10px"/>
        </shape>
    </item>

    <!-- Чорна вертикальна лінія -->
    <item android:left="5dp" android:right="5dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/tr50_white"/>
            <size android:width="1dp"/>
        </shape>
    </item>


</layer-list>
