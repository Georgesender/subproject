<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Нижній шар: весь фон чорний -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bike_grey_blue"/>
                </shape>
            </item>

            <!-- 2) Чорна лінія висотою 1dp, прищіплена до низу -->
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <size android:height="1dp"/>
                    <solid android:color="@color/border_black_linux"/>
                </shape>
            </item>

        </layer-list>
    </item>

    <!-- Верхній шар: прямокутник висотою 460dp зверху -->
    <item
        android:height="60dp"
        android:gravity="top">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bike_grey_blue"/>
                </shape>
            </item>

            <!-- 2) Чорна лінія висотою 1dp, прищіплена до низу -->
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <size android:height="1dp"/>
                    <solid android:color="@color/border_black_linux"/>
                </shape>
            </item>

        </layer-list>
    </item>
</layer-list>
